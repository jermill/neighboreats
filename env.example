# Supabase Configuration
# Copy this file to .env.local and fill in your actual values
# Get these from: https://supabase.com/dashboard/project/icntzxgwrnidzpxdplbm/settings/api

# Public Environment Variables (safe to expose in browser)
NEXT_PUBLIC_SUPABASE_URL=https://icntzxgwrnidzpxdplbm.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here

# Secret Keys (NEVER expose in browser or commit to git)
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Database URL (for server-side operations)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.icntzxgwrnidzpxdplbm.supabase.co:5432/postgres

# Stripe Configuration
# Get these from: https://dashboard.stripe.com/apikeys
# Used for payment processing with 15% platform commission
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_SECRET_KEY=sk_test_your_key_here

# Stripe Webhook Secret
# Development: Use Stripe CLI - run: stripe listen --forward-to localhost:3000/api/payments/webhook
# Production: Get from https://dashboard.stripe.com/webhooks after adding endpoint
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Connect (for chef/driver payouts)
# Get from: https://dashboard.stripe.com/settings/applications
# Enables chefs/drivers to receive 85% of order value directly
STRIPE_CONNECT_CLIENT_ID=ca_your_client_id_here

# Checkr Configuration (Background Checks)
# Get from: https://dashboard.checkr.com/account/api_keys
CHECKR_API_KEY=your_checkr_api_key_here

# Agora Configuration (Live Streaming)
# Get from: https://console.agora.io/
AGORA_APP_ID=your_agora_app_id_here
AGORA_APP_CERTIFICATE=your_agora_certificate_here

# SendGrid Configuration (Email Notifications)
# Get from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@neighboreats.com

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000


